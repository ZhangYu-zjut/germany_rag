# Streamlit Cloud Secrets配置示例
# 将此文件内容复制到Streamlit Cloud的Secrets配置中
# 或重命名为 secrets.toml 用于本地开发

# LLM API配置
OPENAI_API_KEY = "sk-your-api-key"
GEMINI_API_KEY = "sk-your-gemini-key"
THIRD_PARTY_BASE_URL = "https://api.evolink.ai/v1"
THIRD_PARTY_MODEL_NAME = "gemini-2.5-pro"

# Embedding API配置
EMBEDDING_MODE = "deepinfra"
DEEPINFRA_EMBEDDING_API_KEY = "your-deepinfra-key"
DEEPINFRA_EMBEDDING_BASE_URL = "https://api.deepinfra.com/v1/openai"

# Pinecone配置
PINECONE_VECTOR_DATABASE_API_KEY = "your-pinecone-key"
PINECONE_HOST = "https://your-index.svc.pinecone.io"
PINECONE_REGION = "us-east-1"

# Cohere配置
COHERE_API_KEY = "your-cohere-key"

# 系统配置
PRODUCTION_MODE = "true"
LOG_LEVEL = "INFO"
